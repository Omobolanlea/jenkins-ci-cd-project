pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
            echo 'Building..'
                sh 'mvn clean package'
            }
        }
        stage('test') {
            steps {
            echo 'Building..'
                sh 'mvn test'
            }
        }
        stage('deploy') {
            steps {
            echo 'Deploying....' 
            sshagent(['Deploy_user']) { 
                sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/Jenkins-CI-CD-Project/target/webapp-0.2.war centos@174.129.191.136:/home/centos/apache-tomcat-10.0.27/webapps"
                 }
            }
        }
    }
}
